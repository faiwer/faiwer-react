{
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2024", "dom", "dom.iterable"],
    "strict": true,
    "noEmit": true,
    "paths": {
      "faiwer-react": ["./src/index.ts"],
      "faiwer-react/*": ["./src/*"],
      "faiwer-react/jsx-runtime": ["./src/jsx-runtime.ts"],
      "faiwer-react/jsx-dev-runtime": ["./src/jsx-dev-runtime.ts"],
      "~/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "faiwer-react",
    "skipLibCheck": true,
  },
  "include": ["src", "tests"]
}
