{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "paths": {
      "faiwer-react": ["./src/index.ts"],
      "faiwer-react/*": ["./src/*"],
      "faiwer-react/jsx-runtime": ["./src/jsx-runtime.ts"],
      "faiwer-react/jsx-dev-runtime": ["./src/jsx-dev-runtime.ts"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["tests", "**/*.test.ts", "**/*.test.tsx"]
}